---
// Hero.astro - Premium Hero with mouse-following interactive canvas
---

<section
    id="hero-section"
    class="hero-section relative h-screen flex items-center justify-center overflow-hidden"
>
    <!-- Animated gradient background -->
    <div
        class="absolute inset-0 bg-gradient-to-br from-[#111111] via-[#1a1a1a] to-[#0d0d0d]"
    >
        <!-- Floating circles with blur -->
        <div class="absolute inset-0 overflow-hidden">
            <div class="floating-circle circle-1"></div>
            <div class="floating-circle circle-2"></div>
            <div class="floating-circle circle-3"></div>
            <div class="floating-circle circle-4"></div>
            <div class="floating-circle circle-5"></div>
            <div class="floating-circle circle-6"></div>

            <!-- Animated lines -->
            <div class="animated-line line-1"></div>
            <div class="animated-line line-2"></div>
            <div class="animated-line line-3"></div>
        </div>

        <!-- Subtle dot pattern -->
        <div class="absolute inset-0 lash-pattern"></div>
    </div>

    <!-- ★ Interactive mouse-following canvas ★ -->
    <canvas
        id="hero-canvas"
        class="absolute inset-0 w-full h-full z-[1] pointer-events-none"
    ></canvas>

    <!-- Gradient overlay for depth -->
    <div
        class="absolute inset-0 bg-gradient-to-b from-black/50 via-transparent to-black/70 z-[2]"
    >
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 text-center px-4 sm:px-6 max-w-5xl hero-content">
        <!-- VIP Badge -->
        <div
            class="badge-container inline-flex items-center gap-2 py-1.5 md:py-2 px-4 md:px-6 rounded-full glass text-white text-[10px] md:text-xs tracking-[0.2em] md:tracking-[0.25em] font-semibold mb-6 md:mb-10 uppercase"
        >
            <span
                class="w-1.5 h-1.5 md:w-2 md:h-2 rounded-full bg-green-400 animate-pulse shadow-[0_0_12px_rgba(74,222,128,0.6)]"
            ></span>
            Servicio VIP a Domicilio
        </div>

        <!-- Main Title — Dual typography (serif + sans) -->
        <h1 class="hero-title mb-4 md:mb-8">
            <span
                class="block title-word title-word-1 font-serif-display text-5xl sm:text-6xl md:text-8xl lg:text-9xl font-bold text-white tracking-tight leading-none"
            >
                EVOLVE
            </span>
            <span
                class="block title-word title-word-2 font-sans text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-light tracking-[0.3em] md:tracking-[0.4em] mt-2 md:mt-4"
            >
                <span class="lash-gradient-text">LASH</span>
            </span>
        </h1>

        <!-- Decorative line -->
        <div
            class="hero-divider w-16 md:w-24 h-px mx-auto mb-6 md:mb-8 bg-gradient-to-r from-transparent via-evolve-accent to-transparent"
        >
        </div>

        <!-- Subtitle -->
        <p
