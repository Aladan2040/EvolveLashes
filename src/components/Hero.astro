                <div class="arrows">
                    <span class="arrow-down"></span>
                    <span class="arrow-down"></span>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* ── LASH gradient text — fixed with inline styles ─── */
    .lash-gradient-text {
        background: linear-gradient(
            90deg,
            #e8d5c4 0%,
            #c5a065 25%,
            #e8d5c4 50%,
            #c5a065 75%,
            #e8d5c4 100%
        );
        background-size: 200% 100%;
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        color: transparent;
        animation: lashShimmer 4s ease-in-out infinite;
        display: inline-block;
    }

    @keyframes lashShimmer {
        0% {
            background-position: 100% 0;
        }
        50% {
            background-position: 0% 0;
        }
        100% {
            background-position: 100% 0;
        }
    }

    /* ── Content entrance animations ──────────────── */
    .hero-content {
        animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .badge-container {
        opacity: 0;
        animation: fadeInScale 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.3s forwards;
    }

    .title-word-1 {
        opacity: 0;
        animation: revealFromLeft 1s cubic-bezier(0.16, 1, 0.3, 1) 0.5s forwards;
    }

    .title-word-2 {
        opacity: 0;
        animation: revealFromRight 1s cubic-bezier(0.16, 1, 0.3, 1) 0.7s
            forwards;
    }

    .hero-divider {
        opacity: 0;
        transform: scaleX(0);
        animation: expandLine 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.9s forwards;
    }

    .hero-subtitle {
        opacity: 0;
        animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 1s forwards;
    }

    .hero-buttons {
        opacity: 0;
        animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 1.2s forwards;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.8) translateY(20px);
        }
        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }

    @keyframes revealFromLeft {
        from {
            opacity: 0;
            transform: translateX(-60px) skewX(-3deg);
        }
        to {
            opacity: 1;
            transform: translateX(0) skewX(0);
        }
    }

    @keyframes revealFromRight {
        from {
            opacity: 0;
            transform: translateX(60px) skewX(3deg);
        }
        to {
            opacity: 1;
            transform: translateX(0) skewX(0);
        }
    }

    @keyframes expandLine {
        from {
            opacity: 0;
            transform: scaleX(0);
        }
        to {
            opacity: 1;
            transform: scaleX(1);
        }
    }

    /* ── Floating circles ─────────────────────────── */
    .floating-circle {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.35;
        will-change: transform;
    }

    .circle-1 {
        width: 450px;
        height: 450px;
        background: linear-gradient(135deg, #c5a065, #e8d5c4);
        top: -120px;
        right: -120px;
        animation: float1 18s ease-in-out infinite;
    }

    .circle-2 {
        width: 350px;
        height: 350px;
        background: linear-gradient(135deg, #e8d5c4, #c5a065);
        bottom: -80px;
        left: -120px;
        animation: float2 22s ease-in-out infinite;
    }

    .circle-3 {
        width: 200px;
        height: 200px;
        background: #c5a065;
        top: 45%;
        left: 8%;
        animation: float3 14s ease-in-out infinite;
    }

    .circle-4 {
        width: 160px;
        height: 160px;
        background: #e8d5c4;
        top: 18%;
        right: 18%;
        animation: float1 24s ease-in-out infinite reverse;
    }

    .circle-5 {
        width: 280px;
        height: 280px;
        background: linear-gradient(45deg, #c5a065, transparent);
        bottom: 25%;
        right: -60px;
        animation: float2 20s ease-in-out infinite;
    }

    .circle-6 {
        width: 180px;
        height: 180px;
        background: linear-gradient(225deg, #e8d5c4, transparent);
        top: 60%;
        left: 40%;
        animation: float3 16s ease-in-out infinite 2s;
    }

    @keyframes float1 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
        }
        25% {
            transform: translate(-25px, 35px) scale(1.05);
        }
        50% {
            transform: translate(15px, -25px) scale(0.95);
        }
        75% {
            transform: translate(35px, 15px) scale(1.03);
        }
    }

    @keyframes float2 {
        0%,
        100% {
            transform: translate(0, 0) rotate(0deg);
        }
        33% {
            transform: translate(35px, -35px) rotate(12deg);
        }
        66% {
            transform: translate(-25px, 25px) rotate(-6deg);
        }
    }

    @keyframes float3 {
        0%,
        100% {
            transform: translate(0, 0) scale(1);
            opacity: 0.35;
        }
        50% {
            transform: translate(25px, -45px) scale(1.15);
            opacity: 0.5;
        }
    }

    /* ── Animated lines ───────────────────────────── */
    .animated-line {
        position: absolute;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(197, 160, 101, 0.35),
            transparent
        );
    }

    .line-1 {
        width: 350px;
        top: 28%;
        left: 3%;
        animation: shimmer 5s ease-in-out infinite;
        transform: rotate(-12deg);
    }

    .line-2 {
        width: 250px;
        top: 58%;
        right: 8%;
        animation: shimmer 6s ease-in-out infinite 1.5s;
        transform: rotate(18deg);
    }

    .line-3 {
        width: 300px;
        bottom: 18%;
        left: 12%;
        animation: shimmer 5.5s ease-in-out infinite 0.8s;
        transform: rotate(-8deg);
    }

    @keyframes shimmer {
        0%,
        100% {
            opacity: 0;
            transform: translateX(-60px);
        }
        50% {
            opacity: 1;
            transform: translateX(60px);
        }
    }

    /* ── Scroll indicator ────────────────────────── */
    .scroll-indicator {
        opacity: 0;
        animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) 1.8s forwards;
    }

    .mouse {
        width: 26px;
        height: 42px;
        border: 2px solid rgba(255, 255, 255, 0.4);
        border-radius: 13px;
        display: flex;
        justify-content: center;
        padding-top: 8px;
    }

    .wheel {
        width: 3px;
        height: 8px;
        background: rgba(255, 255, 255, 0.6);
        border-radius: 2px;
        animation: scrollWheel 2s ease-in-out infinite;
    }

    @keyframes scrollWheel {
        0%,
        100% {
            transform: translateY(0);
            opacity: 1;
        }
        50% {
            transform: translateY(10px);
            opacity: 0.2;
        }
    }

    .arrows {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 6px;
    }

    .arrow-down {
        width: 10px;
        height: 10px;
        border-right: 2px solid rgba(255, 255, 255, 0.4);
        border-bottom: 2px solid rgba(255, 255, 255, 0.4);
        transform: rotate(45deg);
        margin-top: -5px;
        animation: arrowBounce 2s ease-in-out infinite;
    }

    .arrow-down:nth-child(2) {
        animation-delay: 0.2s;
    }

    @keyframes arrowBounce {
        0%,
        100% {
            opacity: 0.3;
            transform: rotate(45deg) translateY(0);
        }
        50% {
            opacity: 1;
            transform: rotate(45deg) translateY(5px);
        }
    }

    /* ── Dot pattern ──────────────────────────────── */
    .lash-pattern {
        opacity: 0.03;
        background-image: radial-gradient(
            circle at 50% 50%,
            #c5a065 1px,
            transparent 1px
        );
        background-size: 40px 40px;
    }

    /* ── Responsive ───────────────────────────────── */
    @media (max-width: 768px) {
        .floating-circle {
            filter: blur(50px);
        }
        .circle-1 {
            width: 220px;
            height: 220px;
        }
        .circle-2 {
            width: 170px;
            height: 170px;
        }
        .circle-5 {
            width: 150px;
            height: 150px;
        }
        .circle-6 {
            display: none;
        }
        .scroll-indicator {
            display: none;
        }
    }
</style>

<script>
    // ═══════════════════════════════════════════════════════
    // ★ Interactive Mouse-Following Particle System ★
    // Creates a futuristic network of particles that react
    // to cursor movement, forming connections with gold lines
    // ═══════════════════════════════════════════════════════

    class HeroParticleSystem {
        canvas: HTMLCanvasElement;
        ctx: CanvasRenderingContext2D;
        particles: Particle[];
        mouse: { x: number; y: number; radius: number };
        animId: number | null;
        dpr: number;

        constructor(canvas: HTMLCanvasElement) {
            this.canvas = canvas;
            this.ctx = canvas.getContext("2d")!;
            this.particles = [];
            this.mouse = { x: -1000, y: -1000, radius: 180 };
            this.animId = null;
            this.dpr = Math.min(window.devicePixelRatio || 1, 2);

            this.resize();
            this.createParticles();
            this.bindEvents();
            this.animate();
        }

        resize() {
            const section = this.canvas.parentElement!;
            const w = section.clientWidth;
            const h = section.clientHeight;
            this.canvas.width = w * this.dpr;
            this.canvas.height = h * this.dpr;
            this.canvas.style.width = w + "px";
            this.canvas.style.height = h + "px";
            this.ctx.scale(this.dpr, this.dpr);
        }

        createParticles() {
            this.particles = [];
            const section = this.canvas.parentElement!;
            const w = section.clientWidth;
            const h = section.clientHeight;
            // Fewer particles on mobile
            const count = w < 768 ? 40 : 80;

            for (let i = 0; i < count; i++) {
                this.particles.push(new Particle(w, h));
            }
        }

        bindEvents() {
            const section = this.canvas.parentElement!;

            section.addEventListener(
                "mousemove",
                (e: MouseEvent) => {
                    const rect = section.getBoundingClientRect();
                    this.mouse.x = e.clientX - rect.left;
                    this.mouse.y = e.clientY - rect.top;
                },
                { passive: true },
            );

            section.addEventListener("mouseleave", () => {
                this.mouse.x = -1000;
                this.mouse.y = -1000;
            });

            // Touch support
            section.addEventListener(
                "touchmove",
                (e: TouchEvent) => {
                    const rect = section.getBoundingClientRect();
                    this.mouse.x = e.touches[0].clientX - rect.left;
                    this.mouse.y = e.touches[0].clientY - rect.top;
                },
                { passive: true },
            );

            section.addEventListener("touchend", () => {
                this.mouse.x = -1000;
                this.mouse.y = -1000;
            });

            window.addEventListener("resize", () => {
                this.resize();
                this.createParticles();
            });
        }

        drawConnections() {
            const maxDist = 120;
            const mouseMaxDist = 200;

            for (let i = 0; i < this.particles.length; i++) {
                const p = this.particles[i];

                // Connections to mouse
                const dm = Math.hypot(p.x - this.mouse.x, p.y - this.mouse.y);
                if (dm < mouseMaxDist) {
                    const alpha = (1 - dm / mouseMaxDist) * 0.6;
                    this.ctx.beginPath();
                    this.ctx.strokeStyle = `rgba(197, 160, 101, ${alpha})`;
                    this.ctx.lineWidth = 1.5;
                    this.ctx.moveTo(p.x, p.y);
                    this.ctx.lineTo(this.mouse.x, this.mouse.y);
                    this.ctx.stroke();
                }

                // Particle-to-particle connections
                for (let j = i + 1; j < this.particles.length; j++) {
                    const p2 = this.particles[j];
                    const d = Math.hypot(p.x - p2.x, p.y - p2.y);
                    if (d < maxDist) {
                        const alpha = (1 - d / maxDist) * 0.15;
                        this.ctx.beginPath();
                        this.ctx.strokeStyle = `rgba(232, 213, 196, ${alpha})`;
                        this.ctx.lineWidth = 0.5;
                        this.ctx.moveTo(p.x, p.y);
                        this.ctx.lineTo(p2.x, p2.y);
                        this.ctx.stroke();
                    }
                }
            }
        }

        drawMouseGlow() {
            if (this.mouse.x < 0) return;

            // Outer glow
            const grd = this.ctx.createRadialGradient(
                this.mouse.x,
                this.mouse.y,
                0,
                this.mouse.x,
                this.mouse.y,
                160,
            );
            grd.addColorStop(0, "rgba(197, 160, 101, 0.08)");
            grd.addColorStop(0.5, "rgba(197, 160, 101, 0.03)");
            grd.addColorStop(1, "rgba(197, 160, 101, 0)");
            this.ctx.fillStyle = grd;
            this.ctx.fillRect(this.mouse.x - 160, this.mouse.y - 160, 320, 320);

            // Inner bright dot
            const inner = this.ctx.createRadialGradient(
                this.mouse.x,
                this.mouse.y,
                0,
                this.mouse.x,
                this.mouse.y,
                6,
            );
            inner.addColorStop(0, "rgba(232, 213, 196, 0.6)");
            inner.addColorStop(1, "rgba(197, 160, 101, 0)");
            this.ctx.fillStyle = inner;
            this.ctx.beginPath();
            this.ctx.arc(this.mouse.x, this.mouse.y, 6, 0, Math.PI * 2);
            this.ctx.fill();
        }

        animate() {
            const section = this.canvas.parentElement!;
            const w = section.clientWidth;
            const h = section.clientHeight;

            this.ctx.clearRect(0, 0, w, h);

            // Update particles — push away from mouse
            for (const p of this.particles) {
                const dx = p.x - this.mouse.x;
                const dy = p.y - this.mouse.y;
                const dist = Math.hypot(dx, dy);

                if (dist < this.mouse.radius && dist > 0) {
                    const force = (1 - dist / this.mouse.radius) * 2;
                    p.vx += (dx / dist) * force;
                    p.vy += (dy / dist) * force;
                }

                p.update(w, h);
                p.draw(this.ctx, this.mouse);
            }

            this.drawConnections();
            this.drawMouseGlow();

            this.animId = requestAnimationFrame(() => this.animate());
        }

        destroy() {
            if (this.animId) cancelAnimationFrame(this.animId);
        }
    }

    class Particle {
        x: number;
        y: number;
        vx: number;
        vy: number;
        baseSize: number;
        size: number;
        baseAlpha: number;
        alpha: number;
        hue: number; // 0 = gold, 1 = nude

        constructor(w: number, h: number) {
            this.x = Math.random() * w;
            this.y = Math.random() * h;
            this.vx = (Math.random() - 0.5) * 0.4;
            this.vy = (Math.random() - 0.5) * 0.4;
            this.baseSize = Math.random() * 2 + 0.5;
            this.size = this.baseSize;
            this.baseAlpha = Math.random() * 0.4 + 0.1;
            this.alpha = this.baseAlpha;
            this.hue = Math.random();
        }

        update(w: number, h: number) {
            // Friction
            this.vx *= 0.98;
            this.vy *= 0.98;

            this.x += this.vx;
            this.y += this.vy;

            // Wrap around
            if (this.x < 0) this.x = w;
            if (this.x > w) this.x = 0;
            if (this.y < 0) this.y = h;
            if (this.y > h) this.y = 0;
        }

        draw(ctx: CanvasRenderingContext2D, mouse: { x: number; y: number }) {
            const dist = Math.hypot(this.x - mouse.x, this.y - mouse.y);
            const proximityFactor = Math.max(0, 1 - dist / 250);

            // Grow bigger and brighter near mouse
            this.size = this.baseSize + proximityFactor * 3;
            this.alpha = this.baseAlpha + proximityFactor * 0.5;

            // Color interpolation between gold and nude
            const r = this.hue < 0.5 ? 197 : 232;
            const g = this.hue < 0.5 ? 160 : 213;
            const b = this.hue < 0.5 ? 101 : 196;

            ctx.beginPath();
            ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
            ctx.fillStyle = `rgba(${r}, ${g}, ${b}, ${this.alpha})`;
            ctx.fill();

            // Glow around particles near mouse
            if (proximityFactor > 0.3) {
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size * 3, 0, Math.PI * 2);
                const glow = ctx.createRadialGradient(
                    this.x,
                    this.y,
                    0,
                    this.x,
                    this.y,
                    this.size * 3,
                );
                glow.addColorStop(
                    0,
                    `rgba(${r}, ${g}, ${b}, ${proximityFactor * 0.2})`,
                );
                glow.addColorStop(1, `rgba(${r}, ${g}, ${b}, 0)`);
                ctx.fillStyle = glow;
                ctx.fill();
            }
        }
    }

    // Initialize
    document.addEventListener("DOMContentLoaded", () => {
        const canvas = document.getElementById(
            "hero-canvas",
        ) as HTMLCanvasElement;
        if (canvas) {
            // Reduce motion preference check
            if (
                !window.matchMedia("(prefers-reduced-motion: reduce)").matches
            ) {
                new HeroParticleSystem(canvas);
            }
        }
    });

    // Re-init on Astro view transitions
    document.addEventListener("astro:after-swap", () => {
        const canvas = document.getElementById(
            "hero-canvas",
        ) as HTMLCanvasElement;
        if (canvas) {
            if (
                !window.matchMedia("(prefers-reduced-motion: reduce)").matches
            ) {
                new HeroParticleSystem(canvas);
            }
        }
    });
</script>
