---
// src/components/ServiceCard.astro - Premium card with shimmer and glassmorphism
const { title, description, tag, isPremium, href } = Astro.props;
---

<a
    href={href}
    class:list={[
        "service-card relative p-5 md:p-8 rounded-2xl md:rounded-[2rem] border transition-all duration-500 cursor-pointer hover:-translate-y-2 md:hover:-translate-y-3 flex flex-col h-full bg-white group text-left shimmer-hover",
        isPremium
            ? "border-evolve-accent/40 shadow-lg ring-2 ring-evolve-accent/20 hover:shadow-[0_20px_60px_-15px_rgba(197,160,101,0.3)]"
            : "border-gray-100 shadow-sm hover:shadow-[0_20px_60px_-15px_rgba(0,0,0,0.15)] hover:border-gray-200",
    ]}
>
    {/* Accent bar top */}
    <div
        class:list={[
            "absolute top-0 left-8 right-8 h-0.5 rounded-full transition-all duration-500 group-hover:left-4 group-hover:right-4",
            isPremium
                ? "bg-gradient-to-r from-evolve-accent via-yellow-400 to-evolve-accent"
                : "bg-evolve-accent/0 group-hover:bg-evolve-accent",
        ]}
    >
    </div>

    {
        tag && (
            <div class="absolute top-4 right-4 md:top-6 md:right-6 bg-evolve-dark text-white text-[9px] md:text-[10px] font-bold px-2.5 md:px-3 py-1 rounded-full uppercase tracking-wider">
                {tag}
            </div>
        )
    }
    {
        isPremium && (
            <div class="absolute top-4 right-4 md:top-6 md:right-6 bg-gradient-to-r from-evolve-accent to-yellow-500 text-white text-[9px] md:text-[10px] font-bold px-2.5 md:px-3 py-1 rounded-full uppercase tracking-wider flex items-center gap-1 shadow-lg shadow-evolve-accent/20">
                <span>‚≠ê</span> Premium
            </div>
        )
    }
    <h3
        class="text-lg md:text-2xl font-bold text-evolve-dark mb-2 md:mb-4 group-hover:text-evolve-accent transition-colors duration-300 pr-16 md:pr-20 font-serif-display"
    >
        {title}
    </h3>
    <p
        class="text-gray-500 leading-relaxed mb-4 md:mb-6 font-light text-sm md:text-base flex-grow"
    >
        {description}
    </p>
    <div class="mt-auto flex items-center justify-between">
        <span
            class="text-evolve-accent font-semibold text-xs md:text-sm flex items-center gap-1.5 group-hover:gap-2.5 transition-all duration-300"
        >
            Ver detalle
            <svg
                class="w-3 h-3 md:w-4 md:h-4 group-hover:translate-x-1 transition-transform duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
            </svg>
        </span>
    </div>
</a>
