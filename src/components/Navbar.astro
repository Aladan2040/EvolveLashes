---
// Navbar.astro - Premium animated navigation with fixed mobile menu
import logoImg from "../assets/logo-evolve.svg";

const currentPath = Astro.url.pathname;
const isHome = currentPath === "/" || currentPath === "";
---

<nav
    id="navbar"
    class={`fixed top-0 left-0 w-full z-40 transition-all duration-500 ${isHome ? "bg-transparent py-4 md:py-6" : "bg-white/90 backdrop-blur-xl shadow-lg shadow-black/5 py-2"}`}
    data-is-home={isHome}
    style="animation: navSlideDown 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;"
>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16 md:h-20">
            <!-- LOGO -->
            <a
                href="/"
                class="flex-shrink-0 cursor-pointer flex items-center group relative z-[60]"
            >
                <img
                    id="logo-img"
                    class={`transition-all duration-500 h-auto object-contain ${isHome ? "w-32 md:w-48 filter brightness-0 invert" : "w-28 md:w-40"}`}
                    src={logoImg.src}
                    alt="Evolve Lash Logo"
                />
            </a>

            <!-- MENÚ DESKTOP -->
            <div class="hidden md:flex space-x-6 lg:space-x-8 items-center">
                <a
                    href="/"
                    id="nav-link-inicio"
                    class={`relative font-medium transition-all duration-300 hover:text-evolve-accent text-base lg:text-lg group ${isHome ? "text-white" : "text-gray-600"}`}
                >
                    Inicio
                    <span
                        class={`absolute -bottom-1 left-0 h-0.5 bg-evolve-accent transition-all duration-300 rounded-full ${currentPath === "/" ? "w-full" : "w-0 group-hover:w-full"}`}
                    ></span>
                </a>
                <a
                    href="/services"
                    id="nav-link-servicios"
                    class={`relative font-medium transition-all duration-300 hover:text-evolve-accent text-base lg:text-lg group ${isHome ? "text-white" : "text-gray-600"}`}
                >
                    Servicios
                    <span
                        class={`absolute -bottom-1 left-0 h-0.5 bg-evolve-accent transition-all duration-300 rounded-full ${currentPath === "/services" ? "w-full" : "w-0 group-hover:w-full"}`}
                    ></span>
                </a>
                <button
                    id="btn-agendar-desktop"
                    onclick="window.open('https://wa.me/56975598631?text=Hola%20EvolveLashes,%20quiero%20una%20cita.', '_blank')"
                    class="relative overflow-hidden px-5 lg:px-7 py-2.5 rounded-full font-semibold transition-all duration-300 cursor-pointer bg-evolve-accent text-white hover:bg-evolve-dark shadow-[0_4px_15px_rgba(197,160,101,0.4)] hover:shadow-[0_4px_25px_rgba(34,34,34,0.4)] hover:scale-105 active:scale-95 shimmer-hover"
                >
                    Agendar Cita
                </button>
            </div>

            <!-- BOTÓN MENÚ MÓVIL (hamburguesa animada) -->
            <div class="md:hidden flex items-center">
                <button
                    id="mobile-menu-btn"
                    class={`relative z-[60] w-10 h-10 flex items-center justify-center cursor-pointer focus:outline-none transition-colors duration-300 ${isHome ? "text-white" : "text-evolve-dark"}`}
                    aria-label="Menú"
                >
                    <span class="hamburger-line hamburger-top"></span>
                    <span class="hamburger-line hamburger-middle"></span>
                    <span class="hamburger-line hamburger-bottom"></span>
                </button>
            </div>
        </div>
    </div>
</nav>

<!-- MENÚ MÓVIL FULLSCREEN OVERLAY (Fixed & High Z-Index) -->
<div
    id="mobile-menu-overlay"
    class="fixed inset-0 z-50 bg-[#111111] pointer-events-none opacity-0 transition-opacity duration-500 flex flex-col items-center justify-center overflow-hidden"
>
    <!-- Background Decor -->
    <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-evolve-accent/10 to-transparent opacity-30"
    >
    </div>
    <div
        class="absolute top-0 right-0 w-64 h-64 bg-evolve-accent/5 rounded-full blur-[80px]"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 w-80 h-80 bg-evolve-nude/5 rounded-full blur-[100px]"
    >
    </div>

    <!-- Close Button (Explicit) -->
    <button
        id="close-menu-btn"
        class="absolute top-6 right-6 text-white/50 hover:text-white transition-colors duration-300 z-50 p-2"
        aria-label="Cerrar menú"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
        </svg>
    </button>

    <nav
        class="relative z-10 flex flex-col items-center gap-6 text-center w-full px-6"
    >
        <a
            href="/"
            class="mobile-link text-3xl md:text-4xl font-serif-display font-medium text-white hover:text-evolve-accent transition-all duration-300 transform translate-y-8 opacity-0"
        >
            Inicio
        </a>
        <a
            href="/services"
            class="mobile-link text-3xl md:text-4xl font-serif-display font-medium text-white hover:text-evolve-accent transition-all duration-300 transform translate-y-8 opacity-0"
        >
            Servicios
        </a>

        <div
            class="w-12 h-px bg-white/10 my-4 mobile-link transform translate-y-8 opacity-0"
        >
        </div>

        <button
            onclick="window.open('https://wa.me/56975598631?text=Hola%20EvolveLashes,%20quiero%20una%20cita.', '_blank')"
            class="mobile-link group relative overflow-hidden bg-evolve-accent text-white px-8 py-3.5 rounded-full font-bold shadow-[0_4px_20px_rgba(197,160,101,0.4)] hover:shadow-[0_4px_30px_rgba(197,160,101,0.6)] transform translate-y-8 opacity-0 transition-all duration-300 active:scale-95"
        >
            <span class="relative z-10 flex items-center gap-2 text-lg">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                    ></path>
                </svg>
                Agendar ahora
            </span>
        </button>
    </nav>
</div>

<!-- Spacer for fixed navbar on non-home pages -->
{!isHome && <div class="h-20 md:h-24" />}

<style>
    @keyframes navSlideDown {
        from {
            opacity: 0;
            transform: translateY(-100%);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hamburger-line {
        position: absolute;
        width: 24px;
        height: 2px;
        background: currentColor;
        border-radius: 2px;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        left: 50%;
        transform: translateX(-50%);
    }

    .hamburger-top {
        top: 12px;
    }
    .hamburger-middle {
        top: 19px;
    }
    .hamburger-bottom {
        top: 26px;
    }

    /* Active state -> X */
    .menu-open .hamburger-top {
        top: 19px;
        transform: translateX(-50%) rotate(45deg);
    }
    .menu-open .hamburger-middle {
        opacity: 0;
        transform: translateX(-50%) scaleX(0);
    }
    .menu-open .hamburger-bottom {
        top: 19px;
        transform: translateX(-50%) rotate(-45deg);
    }

    .menu-active {
        pointer-events: auto !important;
        opacity: 1 !important;
    }

    /* Stagger animation for links */
    .menu-active .mobile-link {
        opacity: 1;
        transform: translateY(0);
    }

    .mobile-link:nth-child(1) {
        transition-delay: 0.1s;
    }
    .mobile-link:nth-child(2) {
        transition-delay: 0.2s;
    }
    .mobile-link:nth-child(3) {
        transition-delay: 0.25s;
    }
    .mobile-link:nth-child(4) {
        transition-delay: 0.3s;
    }
</style>

<script>
    // Función de inicialización que se ejecuta en cada navegación
    function initNavbar() {
        const navbar = document.getElementById("navbar");
        const logoImg = document.getElementById("logo-img");
        const mobileMenuBtn = document.getElementById("mobile-menu-btn");
        const closeMenuBtn = document.getElementById("close-menu-btn");
        const mobileMenuOverlay = document.getElementById(
            "mobile-menu-overlay",
        );
        const navLinks = document.querySelectorAll(".mobile-link");

        // References for desktop link styling
        const navLinkInicio = document.getElementById("nav-link-inicio");
        const navLinkServicios = document.getElementById("nav-link-servicios");

        const isHome = navbar?.dataset.isHome === "true";
        let isMenuOpen = false;

        function toggleMenu() {
            isMenuOpen = !isMenuOpen;

            if (isMenuOpen) {
                // Open
                mobileMenuOverlay?.classList.add("menu-active");
                mobileMenuBtn?.classList.add(
                    "menu-open",
                    "opacity-0",
                    "pointer-events-none",
                );
                document.body.style.overflow = "hidden";

                // Force button white (although hidden, good for state)
                mobileMenuBtn?.classList.remove("text-evolve-dark");
                mobileMenuBtn?.classList.add("text-white");
            } else {
                // Close
                mobileMenuOverlay?.classList.remove("menu-active");
                mobileMenuBtn?.classList.remove(
                    "menu-open",
                    "opacity-0",
                    "pointer-events-none",
                );
                document.body.style.overflow = "";

                updateNavbarState();
            }
        }

        // Cleanup old listeners to prevent duplicates (though Astro swaps body, safer to be sure)
        // Note: In simple scripts, re-querying elements usually suffices as new elements have no listeners.

        // Listeners
        mobileMenuBtn?.addEventListener("click", (e) => {
            e.stopPropagation();
            toggleMenu();
        });

        closeMenuBtn?.addEventListener("click", (e) => {
            e.stopPropagation();
            toggleMenu();
        });

        navLinks.forEach((link) => {
            link.addEventListener("click", () => {
                if (isMenuOpen) toggleMenu();
            });
        });

        const handleResize = () => {
            if (window.innerWidth >= 768 && isMenuOpen) {
                toggleMenu();
            }
        };
        window.addEventListener("resize", handleResize);

        function updateNavbarState() {
            // Si el menú está abierto, no cambiamos nada visual del navbar fondo,
            // pero el botón hamburguesa ya está oculto.
            if (isMenuOpen) return;

            const scrolled = window.scrollY > 50;

            if (scrolled || !isHome) {
                navbar?.classList.remove("bg-transparent", "py-4", "md:py-6");
                navbar?.classList.add(
                    "bg-white/90",
                    "backdrop-blur-xl",
                    "shadow-lg",
                    "py-2",
                );

                logoImg?.classList.remove("filter", "brightness-0", "invert");
                if (isHome) {
                    logoImg?.classList.remove("w-32", "md:w-48");
                    logoImg?.classList.add("w-28", "md:w-40");
                }

                navLinkInicio?.classList.remove("text-white");
                navLinkInicio?.classList.add("text-gray-600");
                navLinkServicios?.classList.remove("text-white");
                navLinkServicios?.classList.add("text-gray-600");

                mobileMenuBtn?.classList.remove("text-white");
                mobileMenuBtn?.classList.add("text-evolve-dark");
            } else {
                navbar?.classList.add("bg-transparent", "py-4", "md:py-6");
                navbar?.classList.remove(
                    "bg-white/90",
                    "backdrop-blur-xl",
                    "shadow-lg",
                    "py-2",
                );

                logoImg?.classList.add("filter", "brightness-0", "invert");
                if (isHome) {
                    logoImg?.classList.add("w-32", "md:w-48");
                    logoImg?.classList.remove("w-28", "md:w-40");
                }

                navLinkInicio?.classList.add("text-white");
                navLinkInicio?.classList.remove("text-gray-600");
                navLinkServicios?.classList.add("text-white");
                navLinkServicios?.classList.remove("text-gray-600");

                mobileMenuBtn?.classList.add("text-white");
                mobileMenuBtn?.classList.remove("text-evolve-dark");
            }
        }

        window.addEventListener("scroll", updateNavbarState, { passive: true });
        updateNavbarState();
    }

    // Ejecutar en carga inicial y en cada navegación de Astro
    document.addEventListener("astro:page-load", initNavbar);
</script>
