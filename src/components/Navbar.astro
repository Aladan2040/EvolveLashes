---
// Navbar.astro - Versión migrada a Astro
import logoImg from '../assets/logo-evolve.svg';

const currentPath = Astro.url.pathname;
const isHome = currentPath === '/' || currentPath === '';
---

<nav id="navbar" class={`fixed top-0 left-0 w-full z-50 transition-all duration-500 transform ${isHome ? 'bg-transparent py-4 md:py-6' : 'bg-white/95 backdrop-blur-md shadow-md py-2'}`} data-is-home={isHome}>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16 md:h-20">
            <!-- LOGO -->
            <a href="/" class="flex-shrink-0 cursor-pointer flex items-center">
                <img
                    id="logo-img"
                    class={`transition-all duration-300 h-auto object-contain ${isHome ? 'w-32 md:w-48 filter brightness-0 invert' : 'w-28 md:w-40'}`}
                    src={logoImg.src}
                    alt="Evolve Lash Logo"
                />
            </a>

            <!-- MENÚ DESKTOP -->
            <div class="hidden md:flex space-x-6 lg:space-x-8 items-center">
                <a href="/" id="nav-link-inicio" class={`font-medium transition hover:text-evolve-accent text-base lg:text-lg ${isHome ? 'text-white' : 'text-gray-600'}`}>Inicio</a>
                <a href="/services" id="nav-link-servicios" class={`font-medium transition hover:text-evolve-accent text-base lg:text-lg ${isHome ? 'text-white' : 'text-gray-600'}`}>Servicios</a>
                <button
                    id="btn-agendar-desktop"
                    onclick="window.open('https://wa.me/56975598631?text=Hola%20EvolveLashes,%20quiero%20una%20cita.', '_blank')"
                    class="px-5 lg:px-6 py-2.5 rounded-full font-semibold transition-all duration-300 cursor-pointer bg-[#C5A065] text-white hover:bg-[#222222] shadow-[0_4px_15px_rgba(197,160,101,0.4)] hover:shadow-[0_4px_20px_rgba(34,34,34,0.4)]"
                >
                    Agendar Cita
                </button>
            </div>

            <!-- BOTÓN MENÚ MÓVIL -->
            <div class="md:hidden flex items-center">
                <button id="mobile-menu-btn" class={`p-2 focus:outline-none cursor-pointer ${isHome ? 'text-white' : 'text-evolve-dark'}`}>
                    <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- MENÚ MÓVIL DESPLEGABLE -->
    <div id="mobile-menu" class="md:hidden absolute top-full left-0 w-full bg-white border-t border-gray-100 shadow-2xl flex flex-col items-center transition-all duration-500 ease-in-out origin-top opacity-0 -translate-y-5 invisible max-h-[calc(100vh-80px)] overflow-y-auto">
        <div class="w-full px-6 py-8 space-y-5 flex flex-col items-center">
            <a href="/" class="text-lg font-medium text-gray-800 hover:text-evolve-accent transition">Inicio</a>
            <a href="/services" class="text-lg font-medium text-gray-800 hover:text-evolve-accent transition">Ver Carta de Servicios</a>
            <div class="w-full h-px bg-gray-200 my-2"></div>
            <button
                onclick="window.open('https://wa.me/56975598631?text=Hola%20EvolveLashes,%20quiero%20una%20cita.', '_blank')"
                class="w-full bg-[#C5A065] text-white py-4 rounded-xl font-bold shadow-lg text-base cursor-pointer hover:bg-[#222222] transition-all duration-300 flex items-center justify-center gap-2"
            >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                Agendar por WhatsApp
            </button>
        </div>
    </div>
</nav>

<script>
    // Script para manejar scroll y menú móvil
    document.addEventListener('DOMContentLoaded', () => {
        const navbar = document.getElementById('navbar');
        const logoImg = document.getElementById('logo-img');
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const navLinkInicio = document.getElementById('nav-link-inicio');
        const navLinkServicios = document.getElementById('nav-link-servicios');

        const isHome = navbar?.dataset.isHome === 'true';
        let isMenuOpen = false;

        // Toggle menú móvil
        mobileMenuBtn?.addEventListener('click', () => {
            isMenuOpen = !isMenuOpen;
            if (isMenuOpen) {
                mobileMenu?.classList.remove('opacity-0', '-translate-y-5', 'invisible');
                mobileMenu?.classList.add('opacity-100', 'translate-y-0', 'visible');
            } else {
                mobileMenu?.classList.add('opacity-0', '-translate-y-5', 'invisible');
                mobileMenu?.classList.remove('opacity-100', 'translate-y-0', 'visible');
            }
        });

        // Cerrar menú al hacer click en un enlace
        mobileMenu?.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                isMenuOpen = false;
                mobileMenu?.classList.add('opacity-0', '-translate-y-5', 'invisible');
                mobileMenu?.classList.remove('opacity-100','translate-y-0','visible');
            });
        });

        // Manejar scroll solo en home
        if (isHome) {
            const handleScroll = () => {
                const scrolled = window.scrollY > 50;

                if (scrolled) {
                    navbar?.classList.remove('bg-transparent', 'py-6');
                    navbar?.classList.add('bg-white/95', 'backdrop-blur-md', 'shadow-md', 'py-2');

                    logoImg?.classList.remove('w-40', 'md:w-64', 'filter', 'brightness-0', 'invert');
                    logoImg?.classList.add('w-32', 'md:w-48');

                    navLinkInicio?.classList.remove('text-white');
                    navLinkInicio?.classList.add('text-gray-600');
                    navLinkServicios?.classList.remove('text-white');
                    navLinkServicios?.classList.add('text-gray-600');

                    mobileMenuBtn?.classList.remove('text-white');
                    mobileMenuBtn?.classList.add('text-evolve-dark');
                } else {
                    navbar?.classList.add('bg-transparent', 'py-6');
                    navbar?.classList.remove('bg-white/95', 'backdrop-blur-md', 'shadow-md', 'py-2');

                    logoImg?.classList.add('w-40', 'md:w-64', 'filter', 'brightness-0', 'invert');
                    logoImg?.classList.remove('w-32', 'md:w-48');

                    navLinkInicio?.classList.add('text-white');
                    navLinkInicio?.classList.remove('text-gray-600');
                    navLinkServicios?.classList.add('text-white');
                    navLinkServicios?.classList.remove('text-gray-600');


                    mobileMenuBtn?.classList.add('text-white');
                    mobileMenuBtn?.classList.remove('text-evolve-dark');
                }
            };

            window.addEventListener('scroll', handleScroll);
            // Ejecutar una vez al cargar para estado inicial correcto
            handleScroll();
        }
    });
</script>
