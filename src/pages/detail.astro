---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Detalle del Servicio | EvolveLashes">
    <Navbar />
    <main class="pt-32 pb-20 bg-white min-h-screen">
        <div class="max-w-4xl mx-auto px-6 text-center">
            <h1 class="text-4xl font-bold text-evolve-dark mb-6">Detalle del Servicio</h1>
            <p class="text-gray-600 mb-8">Para ver el detalle de un servicio, visita nuestra carta de servicios.</p>
            <a href="/services" class="inline-block bg-evolve-accent text-white px-8 py-4 rounded-full font-bold hover:bg-evolve-dark transition">
                Ver Servicios
            </a>
        </div>
    </main>
    <Footer />
</Layout>